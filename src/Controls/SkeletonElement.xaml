<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local_ctrl="clr-namespace:TFLitePoseTrainer.Controls">
    <Style TargetType="{x:Type local_ctrl:SkeletonElement}">
        <Setter Property="BonePen">
            <Setter.Value>
                <Pen Brush="White" Thickness="2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="JointBrushNone" Value="White"/>
        <Setter Property="JointBrushLow" Value="Red"/>
        <Setter Property="JointBrushMedium" Value="Yellow"/>
        <Setter Property="JointBrushHigh" Value="Green"/>
        <Setter Property="JointRadius" Value="5"/>
        <Setter Property="JointPen">
            <Setter.Value>
                <Pen Brush="Black" Thickness="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
